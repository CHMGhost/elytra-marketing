# ===============================================
# Environment Configuration for Backend Scripts
# ===============================================
# Copy this file to .env and fill in your actual credentials
# Never commit the .env file to version control!

# === Uptime Kuma Configuration ===
# URL of your Uptime Kuma instance
UPTIME_KUMA_URL=https://uptime.yourdomain.com

# API key for Uptime Kuma authentication
# Generate this in Uptime Kuma Settings > API Keys
UPTIME_KUMA_API_KEY=uk1_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Comma-separated list of monitor IDs to check (optional)
# Leave empty to check all monitors
# Example: MONITOR_IDS=1,2,3,4
MONITOR_IDS=

# === DigitalOcean Spaces Configuration ===
# Spaces endpoint (region-based)
# Examples: nyc3.digitaloceanspaces.com, sfo3.digitaloceanspaces.com
SPACES_ENDPOINT=nyc3.digitaloceanspaces.com

# Spaces Access Key and Secret Key
# Generate these in DigitalOcean > API > Spaces Keys
SPACES_ACCESS_KEY=DO00XXXXXXXXXXXXX
SPACES_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === Status Hosting Configuration ===
# Bucket where status.json will be uploaded (public bucket)
STATUS_BUCKET=elytra-status

# Key (filename) for the status file
STATUS_BUCKET_KEY=status.json

# === Backup Storage Configuration ===
# Bucket where backups are stored
BACKUP_BUCKET=elytra-backups

# Prefix/path to backup files within the bucket
# Example: backups/ or database-backups/
BACKUP_PREFIX=backups/

# Maximum acceptable backup age in hours
# Alert if backup is older than this
BACKUP_MAX_AGE_HOURS=25

# === Output Configuration ===
# Local path where status.json will be generated
OUTPUT_FILE=/tmp/status.json

# === Logging Configuration ===
# Path to log file for cron job execution
LOG_FILE=/opt/elytra-infra/logs/status-updates.log

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
